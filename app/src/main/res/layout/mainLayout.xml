<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:jqmq="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/field"
    android:orientation="vertical">

    <!--自定义棋盘View-->
    <com.liujh168.jqmq.GameView
        android:id="@+id/gameview"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#ff0000"
        jqmq:boardbg="#ff0000"
        jqmq:boarddd="56"
        jqmq:boardline="#0000ee"
        jqmq:boardox="53"
        jqmq:boardoy="71"
        jqmq:fen="@string/start_fen" />

    <EditText
        android:id="@+id/edtInfofen"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="@string/txt_hint_fen"
        android:inputType="text"
        android:lines="1" />

    <!--第一排按钮-->
    <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/btn_margin_left"
        android:layout_marginTop="@dimen/btn_margin_top"
        android:orientation="horizontal">

        <Button
            android:id="@+id/btnstart"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/btn_txt_start" />

        <Button
            android:id="@+id/btnopen"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/btn_txt_open" />

        <Button
            android:id="@+id/btnpieceread"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/btn_txt_board_read" />

        <Button
            android:id="@+id/btnshowboard"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/btn_txt_showboard" />

        <Button
            android:id="@+id/btnsettings"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/btn_txt_settings" />
    </LinearLayout>

    <!--第二排按钮-->
    <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/btn_margin_left"
        android:orientation="horizontal">

        <Button
            android:id="@+id/btnnew"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/btn_txt_new" />

        <Button
            android:id="@+id/btnsave"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/btn_txt_save" />

        <Button
            android:id="@+id/btnread"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/btn_txt_piece_read" />

        <Button
            android:id="@+id/btnsound"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/btn_txt_sound" />

        <Button
            android:id="@+id/btnexit"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/btn_txt_exit" />
    </LinearLayout>
</LinearLayout>